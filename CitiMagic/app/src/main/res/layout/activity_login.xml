<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manju.citimagic.LoginActivity">




    <EditText
        android:id="@+id/EmailId"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        />


    <EditText
        android:id="@+id/MobNum"
        android:hint="Mobile Number"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EmailId"
        android:layout_alignEnd="@+id/EmailId"
        android:layout_below="@+id/EmailId"
        android:layout_marginTop="30dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_alignStart="@+id/EmailId"
        android:layout_alignEnd="@+id/EmailId"
        android:layout_below="@+id/EmailId"
        android:layout_marginTop="30dp"
        android:hint="Password"
       />

    <TextView
        android:id="@+id/ForgotPw"
        android:text="Forgot Password?"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SubmitButton"
        android:layout_alignStart="@+id/Password"
        android:layout_marginTop="20dp"
         />
      <TextView
        android:id="@+id/Signup"
        android:text="New here? Sign Up"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ForgotPw"
        android:layout_alignEnd="@+id/SubmitButton"
        android:textIsSelectable="true" />
    <Button
        android:id="@+id/SubmitButton"
        android:text="SUBMIT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/Password"
        android:layout_alignEnd="@+id/Password"
        />
    <Button
        android:id="@+id/Recover"
        android:text="RECOVER"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/EmailId"
        android:layout_alignEnd="@+id/EmailId"
        android:layout_below="@+id/MobNum"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login"
        android:text="LOGIN"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/EmailId"
        android:layout_alignEnd="@+id/EmailId"
        android:layout_below="@+id/Recover"
       android:visibility="gone"
        />

    <Button
        android:id="@+id/Register"
        android:text="REGISTER"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/EmailId"
        android:layout_alignEnd="@+id/EmailId"
        android:layout_below="@+id/login"
        android:visibility="gone"
        />
</RelativeLayout>
